# Server Configuration
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:4000

# Database
MONGODB_URI=mongodb://localhost:27017/balaping

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Redis (for BullMQ worker)
USE_BULLMQ=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Resend Email (https://resend.com)
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=Balaping <alerts@yourdomain.com>

# Stripe Billing (https://stripe.com)
# Get keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRO_PRICE_ID=price_pro_monthly
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly

# Telegram Bot (https://core.telegram.org/bots)
# Create bot via @BotFather to get token
# TELEGRAM_BOT_TOKEN=your_bot_token (configured per alert channel)

# Admin Access
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@example.com

# SSL Check intervals (in hours)
SSL_CHECK_INTERVAL=24

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
